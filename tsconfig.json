{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "lib", ".vscode"]
}
