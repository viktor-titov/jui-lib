{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "target": "es2020",
    "noEmit": false,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "public_types/jquery/*.ts",
    "public_types/*.d.ts",
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "node_modules",
    "build",
    "dist",
    "lib",
    ".vscode"
  ]
}