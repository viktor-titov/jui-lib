{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "target": "es6",
    "noEmit": false,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "typings",
    "src/lib"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "node_modules",
    "build",
    "dist",
    "lib",
    ".vscode",
    "webpack",
    "**/*.test.ts*"
  ]
}